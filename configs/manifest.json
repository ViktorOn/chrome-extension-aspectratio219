{
	"name": "__MSG_extName__",
	"description": "__MSG_description__",
    "manifest_version": 2,
    "version": "1.2.0",
    "author": "Patryk Rzucid≈Ço [@ptkdev] <support@ptkdev.io> (https://ptk.dev)",
	"browser_action": {
		"default_icon":"images/icon_app_128x128.png",
		"default_title":"Aspect Ratio 21:9",
		"default_popup":"popup.html"
	},
    "options_page": "options.html",
    "default_locale": "en",
    "icons": {
        "128": "images/icon_app_128x128.png"
    },
    "permissions": [
        "activeTab",
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "js/video.min.js"
            ],
            "all_frames": true
        }
    ]
}